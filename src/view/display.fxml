<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="view.SonglibController"
	prefHeight="600" prefWidth="400" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		
		<!-- Song List's Window -->
		
		<ListView fx:id="listView" prefHeight="300" prefWidth="400" />
		
		<Label layoutX="160" layoutY="310" text="Song Details:" />
		
		<Label layoutX="9.0" layoutY="338.0" text="Name:" />
		
		<!-- Song Name TextField -->
		<TextField fx:id="songName" layoutX="57.0" layoutY="335.0"
			prefHeight="25.0" prefWidth="320" promptText="Song Name"/>
			
		<Label layoutX="9.0" layoutY="373.0" text="Artist:" />
		
		<!-- Song Artist TextField -->
		<TextField fx:id="artistName" layoutX="57.0" layoutY="370.0"
			prefWidth="320" promptText="Artist Name"/>
			
		<Label layoutX="9.0" layoutY="409.0" text="Album:" />
		
		<!-- Album Name TextField -->
		<TextField fx:id="albumName" layoutX="57.0" layoutY="405.0"
			prefWidth="320" promptText="Album Name (Optional)"/>
			
		<Label layoutX="9.0" layoutY="443.0" text="Year:" />
		
		<!-- Year of Release TextField -->
		<TextField fx:id="yearOfRelease" layoutX="57.0" layoutY="440.0"
			prefWidth="320" promptText="Year of Release (Optional)"/>
			
		<!-- Add Button -->
		<Button fx:id="addButton" layoutX="50" layoutY="490"
			mnemonicParsing="false" text="Add Song" onAction="#add"/>
			
		<!-- Delete Button -->
		<Button fx:id="deleteButton" layoutX="155.0" layoutY="490"
			mnemonicParsing="false" text="Delete Song" onAction="#delete"/>
			
		<!-- Edit Button -->
		<Button fx:id="editButton" layoutX="273" layoutY="490"
			mnemonicParsing="false" text="Edit Song" onAction="#edit"/>
			
		<!-- Clear Button -->
		<Button fx:id="clearButton" layoutX="285" layoutY="540"
			mnemonicParsing="false" text="Clear" onAction="#clearFields"/>
			
	</children>
</AnchorPane>