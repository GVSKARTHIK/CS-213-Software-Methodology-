<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="view.SonglibController"
	prefHeight="400" prefWidth="1000" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		
		<!-- Song List's Window -->
		
		<ListView fx:id="listView" prefHeight="425" prefWidth="500" />
		
		<Label layoutX="700" layoutY="70" text="Song Details:" />
		
		<Label layoutX="530" layoutY="105" text="Name:" />
		
		<!-- Song Name TextField -->
		<TextField fx:id="songName" layoutX="600" layoutY="100"
			prefHeight="25.0" prefWidth="320" promptText="Song Name"/>
			
		<Label layoutX="530" layoutY="155" text="Artist:" />
		
		<!-- Song Artist TextField -->
		<TextField fx:id="artistName" layoutX="600" layoutY="150"
			prefWidth="320" promptText="Artist Name"/>
			
		<Label layoutX="530" layoutY="205" text="Album:" />
		
		<!-- Album Name TextField -->
		<TextField fx:id="albumName" layoutX="600" layoutY="200"
			prefWidth="320" promptText="Album Name (Optional)"/>
			
		<Label layoutX="530" layoutY="255" text="Year:" />
		
		<!-- Year of Release TextField -->
		<TextField fx:id="yearOfRelease" layoutX="600" layoutY="250"
			prefWidth="320" promptText="Year of Release (Optional)"/>
			
		<!-- Add Button -->
		<Button fx:id="addButton" layoutX="550" layoutY="310"
			mnemonicParsing="false" text="Add Song" onAction="#add"/>
			
		<!-- Delete Button -->
		<Button fx:id="deleteButton" layoutX="695" layoutY="310"
			mnemonicParsing="false" text="Delete Song" onAction="#delete"/>
			
		<!-- Edit Button -->
		<Button fx:id="editButton" layoutX="850" layoutY="310"
			mnemonicParsing="false" text="Edit Song" onAction="#edit"/>
			
		<!-- Clear Button -->
		<Button fx:id="clearButton" layoutX="865" layoutY="360"
			mnemonicParsing="false" text="Clear" onAction="#clearFields"/>
			
	</children>
</AnchorPane>